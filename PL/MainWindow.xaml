<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Bus Managment" Height="507" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="assets\icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BitmapImage x:Key="Image1" UriSource="/Assets/busegd.jpg"/>
            <BitmapImage x:Key="Image2" UriSource="/Assets/busdan.jpg"/>
            <BitmapImage x:Key="Image3" UriSource="/Assets/buskavim.jpg"/>
            <BitmapImage x:Key="Image4" UriSource="/Assets/busafikim.jpg"/>

        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <!--Image transition-->
            <ColumnDefinition/>
            <!--login & password Section-->
        </Grid.ColumnDefinitions>

        <StackPanel 
            Grid.Column="1"
            Margin="50">

            <!--profile picture-->
            <Ellipse 
                Width="100"
                Height="100"
                HorizontalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush
                        Stretch="UniformToFill"
                        ImageSource="1.jpg">
                    </ImageBrush>
                </Ellipse.Fill>
            </Ellipse>

            <!--Sine Up-->
            <TextBlock
                Margin="0,30,0,0">
                Need an account? <Hyperlink
                    TextDecorations="None">SingnUp</Hyperlink>
            </TextBlock>

            <!--Email & Password Text Box-->
            <Border
                Height="50"
                BorderBrush="Silver"
                BorderThickness="2"
                CornerRadius="4"
                Margin="0,10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <!--For Icon-->
                        <ColumnDefinition/>
                        <!--For Email-->
                    </Grid.ColumnDefinitions>

                    <!--Icon-->
                    <Path
                        Width="25"
                        Height="25"
                        Data="{StaticResource mail_icon}"
                        Fill="Silver"/>

                    <!--email textbox-->
                    <TextBox x:Name="emailbox"
                        BorderThickness="0"
                        Foreground = "Silver"
                        Grid.Column="1"
                        Text="Email"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold" MouseEnter="click_delete" MouseLeave="click_add"/>
                </Grid>
            </Border>
            <Border
                Height="50"
                BorderBrush="Silver"
                BorderThickness="2"
                CornerRadius="4"
                Margin="0,0,0,20">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <!--For Icon-->
                        <ColumnDefinition/>
                        <!--For Email-->
                    </Grid.ColumnDefinitions>

                    <!--Icon-->
                    <Path
                        Width="25"
                        Height="25"
                        Data="{StaticResource pass_icon}"
                        Fill="Silver"/>

                    <!--password textbox-->
                    <PasswordBox x:Name="passbox"
                        BorderThickness="0"
                        Foreground = "Silver"
                        Grid.Column="1"
                        Password="Password"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold" MouseEnter="click_delete_pass" MouseLeave="click_add_pass"/>
                </Grid>
            </Border>
          
            <!--Login Button-->
            <Button
                 Background="MediumBlue"
                 BorderThickness="0"
                 Content="Login In"                  
                 Foreground="White"
                 Height="50" Click="Button_Click"/>


        </StackPanel>
        <!--Forgot your passworb-->
        <TextBlock
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,20">
            <Hyperlink
                TextDecorations="None">
                Forgot your password?
            </Hyperlink>
        </TextBlock>
        
        <!--Image Transition-->
        <Image
            Source="{StaticResource Image1}"
            Stretch="UniformToFill">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            
                            <!--FadeOut-->
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                SpeedRatio=".5"
                                From="1"
                                To=".5"
                                RepeatBehavior="Forever"/>
                           
                            <!--FadeOut-->
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                SpeedRatio=".5"
                                From=".5"
                                To="1"
                                RepeatBehavior="Forever"/>
                            <ObjectAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Source"
                                Duration="0:0:8"
                                RepeatBehavior="Forever">
                                <DiscreteObjectKeyFrame
                                    Value="{StaticResource Image2}"
                                    KeyTime="0:0:2"/>
                                <DiscreteObjectKeyFrame
                                    Value="{StaticResource Image3}"
                                    KeyTime="0:0:4"/>
                                <DiscreteObjectKeyFrame
                                    Value="{StaticResource Image4}"
                                    KeyTime="0:0:6"/>

                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
    </Grid>
</Window>
